# Django Environment Variables Template
# Copy this to `.env` and fill in your actual values
# NEVER commit the actual `.env` file to git!

# Django Core
SECRET_KEY=generate-a-new-key-with-python-command-below
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite for .exe, Postgres for cloud)
DATABASE_URL=sqlite:///db.sqlite3

# Restaurant Info
RESTAURANT_NAME=Your Restaurant Name
KASSA_SHIFT=

# JWT Tokens (optional: customize if needed)
ACCESS_TOKEN_LIFETIME=30
REFRESH_TOKEN_LIFETIME=30

# CORS (for local development)
CORS_ALLOW_ALL_ORIGINS=True

# Printer Settings (optional)
PRINTER_TEXT_SIZE=normal
PRINTER_USE_RASTER=False
